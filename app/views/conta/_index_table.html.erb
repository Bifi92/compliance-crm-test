<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email NF-e</th>      
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conta.each do |contum| %>
      <tr>
        <td><%= link_to contum.to_s, contum %></td>
        <td><%= link_to_unless contum.email_nfe.nil?, contum.email_nfe, contum %></td>
        <td><%= link_to_unless contum.telefone.nil?, contum.telefone, contum %></td>
        <td>
          <%= link_to 'Editar', edit_contum_path(contum), :class => 'btn btn-default btn-sm' %>
          <%= link_to 'Excluir', contum, method: :delete, data: { confirm: 'Tem certeza?' }, :class => 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>