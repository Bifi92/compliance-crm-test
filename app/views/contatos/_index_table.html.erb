<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Conta</th>
      <th>Telefone comercial</th>
      <th>Email corporativo</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= link_to contato.to_s, contato %></td>
        <td><%= link_to contato.contum, contato.contum %></td>
        <td><%= link_to_unless contato.telefone_comercial.nil?, contato.telefone_comercial, contato %></td>
        <td><%= link_to_unless contato.email_corporativo.nil?, contato.email_corporativo, contato %></td>
        <td>
          <%= link_to 'Editar', edit_contato_path(contato), :class => 'btn btn-default btn-sm' %>
          <%= link_to 'Excluir', contato, method: :delete, data: { confirm: 'Tem certeza?' }, :class => 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>  
    </tbody>
  </table>